{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Datenanfragen.de company database record",
	"description": "A single record of the Datenanfragen.de company database. It represents the contact information of a company (or other organization) specifically for privacy-related inquires and requests.\nMore information and access to the whole database at: https://github.com/datenanfragen/companies",
	"type": "object",
	"properties": {
		"slug": {
			"type": "string",
			"title": "Slug"
		},
		"categories": {
			"type": "array",
			"title": "Categories",
			"uniqueItems": true,
			"items": {
				"type": "string",
				"enum": [ "addresses", "ads", "collection agency", "commerce", "credit agency", "finance", "insurance", "public body", "social media", "telecommunication", "travel", "utility" ]
			}
		},
		"name": {
			"type": "string",
			"title": "Name"
		},
		"runs": {
			"type": "array",
			"title": "Runs",
			"uniqueItems": true,
			"items": {
				"type": "string"
			}
		},
		"address": {
			"type": "string",
			"title": "Address",
			"format": "text"
		},
		"phone": {
			"type": "string",
			"title": "Phone",
			"pattern": "^\\+\\d+ \\d+ [\\d ]+$"
		},
		"fax": {
			"type": "string",
			"title": "Fax",
			"pattern": "^\\+\\d+ \\d+ [\\d ]+$"
		},
		"email": {
			"type": "string",
			"title": "E-mail",
			"format": "idn-email"
		},
		"web": {
			"type": "string",
			"title": "Website",
			"format": "uri"
		},
		"sources": {
			"type": "array",
			"title": "Sources",
			"uniqueItems": true,
			"items": {
				"type": "string",
				"format": "uri"
			}
		},
		"required-elements-access": {
			"type": "array",
			"title": "Access elements",
			"uniqueItems": true,
			"items": {
				"type": "object",
				"properties": {
					"desc": {
						"type": "string",
						"title": "Description"
					},
					"type": {
						"type": "string",
						"title": "Type",
						"default": "input",
						"enum": [ "input", "textarea", "address", "name" ]
					},
					"optional": {
						"type": "boolean",
						"title": "Optional?"
					}
				},
				"required": [ "desc", "type" ]
			}
		},
		"required-elements-erasure": {
			"type": "array",
			"title": "Erasure elements",
			"uniqueItems": true,
			"items": {
				"type": "object",
				"properties": {
					"desc": {
						"type": "string",
						"title": "Description"
					},
					"type": {
						"type": "string",
						"title": "Type",
						"default": "input",
						"enum": [ "input", "textarea", "address", "name" ]
					},
					"optional": {
						"type": "boolean",
						"title": "Optional?"
					}
				},
				"required": [ "desc", "type" ]
			}
		},
		"required-elements-rectification": {
			"type": "array",
			"title": "Erasure elements",
			"uniqueItems": true,
			"items": {
				"type": "object",
				"properties": {
					"desc": {
						"type": "string",
						"title": "Description"
					},
					"type": {
						"type": "string",
						"title": "Type",
						"default": "input",
						"enum": [ "input", "textarea", "address", "name" ]
					},
					"optional": {
						"type": "boolean",
						"title": "Optional?"
					}
				},
				"required": [ "desc", "type" ]
			}
		},
		"custom-access-template": {
			"type": "string",
			"title": "Custom access template"
		},
		"custom-erasure-template": {
			"type": "string",
			"title": "Custom erasure template"
		},
		"custom-rectification-template": {
			"type": "string",
			"title": "Custom rectification template"
		},
		"needs-id-document": {
			"type": "boolean",
			"title": "Needs ID document?"
		},
		"comments": {
			"type": "array",
			"title": "Comments",
			"items": {
				"type": "string",
				"format": "text"
			}
		}
	},
	"required": [ "slug", "name", "address", "sources" ]
}